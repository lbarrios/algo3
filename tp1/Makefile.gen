CC=g++
CFLAGS=-c -Wall -pedantic
CFLAGSDEBUG=$(CFLAGS) -ggdb -DDEBUG
CFLAGSTIME=$(CFLAGS) -DTIME -O2
OBJSDIR=OBJS
OBJS := $(addprefix ${OBJSDIR}/,${OBJS})
OBJSDEBUG := $(addsuffix .debug,${OBJS})
OBJSTIME := $(addsuffix .time,${OBJS})
COMMON_OBJS=../common/ParserDeParametros.o

.PHONY: all debug time clean $(OBJSDIR)

## Targets virtuales
all: $(EXE) $(EXE).debug $(EXE).time
debug: $(EXE).debug
time: $(EXE).time
$(OBJSDIR):
	@mkdir -p $(OBJSDIR)

##  Targets
$(EXE): $(OBJS) $(COMMON_OBJS)
	$(CC) $(OBJS) $(COMMON_OBJS) -o $@

$(EXE).debug: $(OBJSDEBUG) $(COMMON_OBJS)
	$(CC) $(OBJSDEBUG) $(COMMON_OBJS) -o $@

$(EXE).time: $(OBJSTIME) $(COMMON_OBJS)
	$(CC) -lrt $(OBJSTIME) $(COMMON_OBJS) -o $@ -lrt

## Objetos
$(OBJSDIR)/%.o: %.cpp %.h | $(OBJSDIR)
	$(CC) $(CFLAGS) $< -o $@

$(OBJSDIR)/%.o.debug: %.cpp %.h | $(OBJSDIR)
	$(CC) $(CFLAGSDEBUG) $< -o $@

$(OBJSDIR)/%.o.time: %.cpp %.h | $(OBJSDIR)
	$(CC) $(CFLAGSTIME) $< -o $@

$(OBJS): | $(OBJSDIR)

clean:
	@rm -rf $(OBJSDIR)
	@rm -f $(EXE) $(OBJS) *.o *.debug *.time
